= form_for(@kanban_board, html:{class: "form-horizontal"}) do |f|
  .form-group
    - if @kanban_board.errors.any?
      #error_explanation
        %h2
          = pluralize(@kanban_board.errors.count, "error")
          prohibited this kanban_board from being saved:
        %ul
          - @kanban_board.errors.full_messages.each do |message|
            %li= message
  .field.form-group
    = f.label :title, class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :title, autocomplete: "off", class: "form-control"
  .field.form-group
    = f.label :description, class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :description, autocomplete: "off", class: "form-control"
  - if user_signed_in?
    .field.form-group
      = f.label :public_visible, class: "col-sm-2 control-label"
      .col-sm-10
        = f.check_box :public_visible
  .actions
    = f.submit "Save changes", class: "btn btn-primary"
