.row
  %p#notice= notice
.row
  %h1 Listing Kanban Boards
  %table.table.table-hover.table-striped
    %thead
      %tr
        %th Title
        %th Description
        %th Public visible
        %th{:colspan => "3"}
    %tbody
      - @kanban_boards.each do |kanban_board|
        %tr
          %td= kanban_board.title
          %td= kanban_board.description
          %td= kanban_board.public_visible
          %td= link_to 'Show', kanban_board
          %td= link_to 'Edit', edit_kanban_board_path(kanban_board)
          %td= link_to 'Destroy', kanban_board, method: :delete, data: { confirm: 'Are you sure?' }
  %br/
  = link_to 'New Kanban board', new_kanban_board_path
