.row
  = link_to new_kanban_board_path do
    = icon("plus-square-o")
    New Kanban Board
  %h1 Listing Kanban Boards
  %table.table.table-hover.table-striped
    %thead
      %tr
        %th Title
        %th Description
        %th Public visible
        %th{:colspan => "3"}
    %tbody
      - @kanban_boards.each do |kanban_board|
        %tr
          %td= link_to kanban_board.title, kanban_board
          %td= kanban_board.description
          %td= icon("eye#{"-slash" unless kanban_board.public_visible}")
          %td= link_to icon("pencil"), edit_kanban_board_path(kanban_board)
          %td= link_to icon("trash"), kanban_board, method: :delete, data: { confirm: 'Are you sure?' }
  %br/
